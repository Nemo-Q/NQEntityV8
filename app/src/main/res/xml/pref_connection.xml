<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:summary="Ticket Editor Settings"
        android:title="Ticket Editor Settings"
        >
    <CheckBoxPreference
        android:key="receive"
        android:title="Receive from LAN"
        android:summary="Enable the printer to be found by the Editor."
        android:defaultValue="True" />
    <EditTextPreference
        android:key="device_name"
        android:title="Device Name"
        android:defaultValue="Entity V8"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

        <EditTextPreference
            android:key="listen_port"
            android:title="Listen Port"
            android:defaultValue="8080"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1"
            />
        <EditTextPreference
            android:key="udp_port"
            android:title="UDP Port"
            android:defaultValue="8000"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1"
            />

    </PreferenceCategory>
    <PreferenceCategory
        android:summary="Server Settings"
        android:title="Server Settings"
        >
    <EditTextPreference
        android:key="server_ip"
        android:title="@string/pref_title_address"
        android:defaultValue="@string/pref_default_address"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="server_port"
        android:title="@string/pref_title_port"
        android:defaultValue="@string/pref_default_port"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        />
    </PreferenceCategory>
</PreferenceScreen>