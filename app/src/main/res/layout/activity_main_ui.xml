<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#FFFFFF"
    tools:context=".V8Activity"
    >
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:fitsSystemWindows="false"
        android:translationZ="4dp"
        android:layout_gravity="left|top"
        android:background="@drawable/bgv8"
        android:id="@+id/mainLayout">
        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:weightSum="1"></LinearLayout>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/settingsButton"
            android:src="@android:drawable/ic_menu_preferences"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dragDownArrow"
            android:src="@drawable/arrow"
            android:layout_below="@+id/draggableLayout"
            android:layout_centerHorizontal="true" />
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/draggableLayout">
            <ImageView
                android:layout_width="264dp"
                android:layout_height="354dp"
                android:id="@+id/dragTarget"
                android:layout_gravity="center"
                android:src="@drawable/white0"
                android:alpha="1.0"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="323dp"
                android:id="@+id/templateImage"
                android:layout_gravity="center"
                android:src="@drawable/template"/>
        </FrameLayout>

    </RelativeLayout>
</FrameLayout>
